<table>
    <thead>
        <tr>
            <th>Disk Name</th>
            <th>Partition</th>
            <th>Capacity (GB)</th>
            <th>Used Space (GB)</th>
            <th>Available Space (GB)</th>
            <th>Temperature (Â°C)</th>
            <th>Disk Type</th>
        </tr>
    </thead>
    <tbody>
        <% disks.forEach(disk => { %>
            <tr>
                <td><%= disk.name %></td>
                <td><%= disk.partition %></td>
                <td><%= disk.capacity.toFixed(2) %></td>
                <td><%= disk.used.toFixed(2) %></td>
                <td><%= disk.available.toFixed(2) %></td>
                <td><%= disk.temperature %></td>
                <td><%= disk.type %></td>
            </tr>
        <% }); %>
    </tbody>
    <tbody class="tbody-sum">
        <tr>
            <td>Summary:</td>
            <td></td>
            <td><%= totalCapacity.toFixed(2) %></td>
            <td><%= totalUsed.toFixed(2) %></td>
            <td><%= totalAvailable.toFixed(2)  %></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>