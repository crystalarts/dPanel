<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= __('web_title') %></title>

    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/dashboard-database.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="icon" type="image/jpg" sizes="32x32" href="/img/logo.jpg" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
      defer
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
      crossorigin="anonymous"
      defer
    ></script>

    <script src="/js/index.js"></script>
  </head>
  <body>
    <div class="navbar">
      <div class="left">
        <span>dPanel</span>
      </div>
      <div class="right">
        <span><%= user.name %></span>
        <img src="/img/user.png" alt="logo" />
      </div>
    </div>
    <div class="main">
      <div class="sidebar">
        <a href="/admin"><i class="fas fa-home"></i></a>
        <a href="/"><i class="fas fa-key"></i></a>
        <a class="active" href="/admin/database"><i class="fas fa-database"></i></a>
        <a href="/admin/eggs"><i class="fas fa-egg"></i></a>
        <a href="/"><i class="fas fa-server"></i></a>
        <a href="/"><i class="fab fa-docker"></i></a>
        <a href="/admin/users"><i class="fas fa-user-friends"></i></a>
      </div>
      <div class="content">
        <div class="left-bar">
          <div class="leftbar-info">
            <div class="leftbar-icon">
              <img src="/img/logo.jpg" alt="logo" />
            </div>
            <span>Welcome to dPanel</span>
            <p>Version: Development</p>
          </div>
          <div class="leftbar-secound">
            <span class="leftbar-secound-title">OVERVIEW</span>
            <div class="leftbar-secound-item active">
              <a href="/">
                <i class="fas fa-laptop"></i>
                <h2 class="iphost"><%= iphost %></h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-tachometer-alt"></i>
                <h2>Dashboard</h2>
              </a>
            </div>
            <span class="leftbar-secound-title">MAIN</span>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-globe-americas"></i>
                <h2>Websites</h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-network-wired"></i>
                <h2>DNS</h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-paper-plane"></i>
                <h2>Email</h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-cloud-upload-alt"></i>
                <h2>FTP</h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="far fa-copy"></i>
                <h2>Back Up</h2>
              </a>
            </div>
            <div class="leftbar-secound-item">
              <a href="/">
                <i class="fas fa-user-shield"></i>
                <h2>SSL</h2>
              </a>
            </div>
          </div>
        </div>
        <div class="right-bar">
          <div class="stats">
            <div class="stats-boxing">
              <h4 class="namestats">Panel's Resources:</h4>
              <div class="stats-box accounts">
                <i class="fas fa-server"></i>
                <h4 class="statsboxname">Nodes</h4>
                <p>0</p>
              </div>
              <div class="stats-box servers">
                <i class="fab fa-docker"></i>
                <h4 class="statsboxname">Servers</h4>
                <p>0</p>
              </div>
              <div class="stats-box ram">
                <a href="/admin/eggs">
                  <i class="fas fa-egg"></i>
                  <h4>Eggs</h4>
                  <p><%= eggsdown %></p>
                </a>
              </div>
              <div class="stats-box cpu">
                <a href="/admin/users">
                  <i class="fas fa-user-friends"></i>
                  <h4 class="statsboxname">Users</h4>
                  <p><%= index_user %></p>
                </a>
              </div>
            </div>
          </div>
          <div style="margin-left: auto; color: #b4b7b9; margin-right: auto; margin-bottom: 10px;">
            <div style="display: flex; align-items: center; margin-left: 20px; color: #b4b7b9; margin-top: 20px;">
                <h2 style="font-weight: 400; font-size: 16px;">Database</h2>
                <i class="fas fa-chevron-right" style="margin-left: 10px; margin-right: 10px; font-size: 12px;"></i>
                <h2 style="font-weight: 400; font-size: 16px;">Database Preview</h2>
            </div>
            <div style="padding: 20px; background-color: #ffffff08; margin-top: 15px; border-radius: 10px; border: 1px solid #33373f;">
              <div style="display: flex;">
                <div style="width: max-content;">
                  <h3 style="color: #fff; font-size: 14px;">Logged in as : <%= dbuser %>@<%= dbhost %></h3>
                  <p style="margin-top: 10px;"><i class="fas fa-database"></i> dPanel</p>
                  <p class="table-table" id="table" style="cursor: pointer; margin-left: 25px; margin-top: 5px;" onclick="showTable()"><i class="fas fa-caret-down"></i> Tables</p>
                  <div style="display: flex; flex-direction: row;">
                      <ul style="display: flex; flex-direction: column;margin-left: 45px;" id="tableList">
                          <% tables.forEach(table => { %>
                              <li><a href="#" class="table-link" data-table="<%= table %>"><i class="fas fa-table"></i> <%= table %></a></li>
                          <% }) %>
                      </ul>
                  </div>
                </div>
                <div style="margin-left: 20px; width: 100%;">
                  <h2 class="previewtable" style="color: #fff; font-size: 15px;">Table Preview</h2>
                  <div class="tableContent" id="tableContent">
                      <p style="color: #b4b7b9; font-size: 12px;">Select a table to see the contents.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
        function showTable() {
            var menu = document.getElementById('tableList');
            var table = document.getElementById('table');

            if (menu.style.display === 'flex') {
                menu.style.display = 'none';
                table.innerHTML = '<i class="fas fa-caret-right"></i> Tables';
            } else {
                menu.style.display = 'flex';
                table.innerHTML = '<i class="fas fa-caret-down"></i> Tables';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const tableList = document.getElementById('tableList');
            const tableContent = document.getElementById('tableContent');
            
            tableList.addEventListener('click', async (event) => {
                if (event.target && event.target.matches('.table-link')) {
                    event.preventDefault();

                    document.querySelectorAll('.table-link').forEach(link => {
                        link.classList.remove('active-table-link');
                    });

                    event.target.classList.add('active-table-link');

                    const tableName = event.target.getAttribute('data-table');
                    
                    try {
                        const response = await fetch(`/api/table/${tableName}`);
                        const data = await response.json();

                        if (data.length === 0) {
                            tableContent.innerHTML = '<p style="color: #b4b7b9; font-size: 12px;">No data in the table.</p>';
                            return;
                        }

                        let tableHtml = '<table border="1"><thead><tr>';
                        Object.keys(data[0]).forEach(key => {
                            tableHtml += `<th>${key}</th>`;
                        });
                        tableHtml += '</tr></thead><tbody>';

                        data.forEach(row => {
                            tableHtml += '<tr>';
                            Object.values(row).forEach(value => {
                                tableHtml += `<td>${value}</td>`;
                            });
                            tableHtml += '</tr>';
                        });

                        tableHtml += '</tbody></table>';
                        tableContent.innerHTML = tableHtml;
                    } catch (error) {
                        console.error('Error fetching table data:', error);
                        tableContent.innerHTML = '<p style="color: #b4b7b9; font-size: 12px;">An error occurred while retrieving data.</p>';
                    }
                }
            });
        });
    </script>
</html>
